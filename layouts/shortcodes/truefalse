<html>
<h3 id="q"></h3>
<table>
  <tr>
    <th id="t" onclick="truefunction()">True</th>
    <th id="f" onclick="falsefunction()">False</th>
  </tr>
</table>
</html>

<script>
var a = true;
var b = document.getElementById("t").innerHTML;
var c = document.getElementById("f").innerHTML;
function truefunction(a) {
  if (a = true) {
    b.style.backgroundColor = #38d66f;
    c.style.backgroundColor = #e03c2d;
  }
  else {
    b.style.backgroundColor = #e03c2d;
    c.style.backgroundColor = #38d66f;
  }
}
function falsefunction(a) {
  if (a = false) {
    b.style.backgroundColor = #38d66f;
    c.style.backgroundColor = #e03c2d;
  }
  else {
    b.style.backgroundColor = #e03c2d;
    c.style.backgroundColor = #38d66f;
  }
}
</script>
