// BEGIN: JavaScript code
const readline = require('readline');

const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

rl.question('Enter a paragraph: ', (paragraph) => {
  if (paragraph.includes('hello')) {
    console.log('Nice job!');
  } else {
    console.log('Missing the word hello. Please try again.');
  }

  rl.close();
});
// BEGIN: HTML code
<!DOCTYPE html>
<html>
<head>
  <title>Hello World Search</title>
</head>
<body>
  <script>
    // FILEPATH: /C:/Users/ashal/essayquestion.js
    // BEGIN: JavaScript code
    const paragraphInput = document.createElement('input');
    paragraphInput.type = 'text';
    paragraphInput.placeholder = 'Enter a paragraph';
    document.body.appendChild(paragraphInput);

    const submitButton = document.createElement('button');
    submitButton.textContent = 'Submit';
    document.body.appendChild(submitButton);

    submitButton.addEventListener('click', () => {
      const paragraph = paragraphInput.value;

      if (paragraph.includes('hello')) {
        console.log('Nice job!');
      } else {
        console.log('Missing the word hello. Please try again.');
      }
    });
    // END: JavaScript code
  </script>
</body>
</html>
// END: HTML code
// END: JavaScript code
